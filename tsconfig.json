{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "allowJs": true,
        "sourceMap": true,
        "rootDir": ".",
        "outDir": "dist",
        "paths": {
            "~/*": [
                "src/*"
            ]
        },
        "baseUrl": "."
    },
    "include": [
        "src/**/*",
        "drizzle.config.ts"
    ]
}